@model ContactForm.Models.ContactFormModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 rounded shadow-sm"> <!-- Border ve kutu ekledik -->
                <h2 class="text-center mb-4">Bizimle İletişime Geçin</h2>
                <form asp-action="Create" method="post">
                    <div class="form-group mb-3"> <!-- Mesafe eklemek için mb-3 (margin-bottom) -->
                        <label asp-for="FullName">İsim ve Soyisim</label>
                        <input asp-for="FullName" class="form-control" placeholder="İsim ve Soyisim" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Phone">Telefon Numarası</label>
                        <input asp-for="Phone" class="form-control" placeholder="Telefon Numarası" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email">Mail Adresi</label>
                        <input asp-for="Email" class="form-control" placeholder="Mail Adresi" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Department">Departman</label>
                        <select asp-for="Department" class="form-control">
                            <option value="">Departman Seçin</option>
                            <option value="Muhasebe">Muhasebe</option>
                            <option value="Teknik Destek">Teknik Destek</option>
                            <option value="Insan Kaynakları">İnsan Kaynakları</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Message">Mesajınız</label>
                        <textarea asp-for="Message" class="form-control" placeholder="Mesajınız"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Gönder</button>
                </form>
            </div>
        </div>
    </div>
</div>
